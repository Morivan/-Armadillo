<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EducationActivity"
    android:background="@color/violet">

    <Button
        android:id="@+id/button1"
        android:layout_width="369dp"
        android:layout_height="180dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/alumnisans_regular"
        android:gravity="center"
        android:onClick="lectureActivity"
        android:text="@string/lecture"
        android:textColor="@color/violet"
        android:textSize="112sp"
        app:backgroundTint="@color/peach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="209dp"
        android:layout_height="291dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/alumnisans_regular"
        android:gravity="center"
        android:onClick="taskActivity"
        android:text="@string/task"
        android:textColor="@color/violet"
        android:textSize="62sp"
        app:backgroundTint="@color/peach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="132dp"
        android:layout_height="295dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/alumnisans_regular"
        android:gravity="center"
        android:onClick="testActivity"
        android:text="@string/test"
        android:textColor="@color/violet"
        android:textSize="62sp"
        app:backgroundTint="@color/peach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <TextView
        android:id="@+id/title_education"
        android:layout_width="415dp"
        android:layout_height="120dp"
        android:layout_marginBottom="56dp"
        android:background="@color/peach"
        android:fontFamily="@font/blackberry_normal"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/violet"
        android:autoSizeTextType="uniform"
        android:maxLines="3"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>