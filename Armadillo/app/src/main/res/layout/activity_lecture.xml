<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LectureActivity"
    android:background="@color/peach">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="361dp"
        android:layout_height="695dp"
        android:background="@drawable/rounded_background_lectures"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:id="@+id/title_lecture"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:fontFamily="@font/blackberry_normal"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/violet"
            android:textSize="32sp" />

        <ScrollView
            android:layout_width="331dp"
            android:layout_height="611dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/body_lecture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/deep_purple"
                    android:textSize="22sp"/>

                <!-- Button at the end of ScrollView -->
                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:backgroundTint="@color/peach"
                    android:text="Завершить"
                    android:textColor="@color/violet"
                    android:textSize="32sp"
                    android:fontFamily="@font/blackberry_normal"/>

            </LinearLayout>
        </ScrollView>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>