<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LectureActivity"
    android:background="@color/violet">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="360dp"
        android:layout_height="635dp"
        android:background="@drawable/rounded_background_lectures"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="259dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:fontFamily="@font/blackberry_normal"
            android:gravity="center"
            android:text="@string/symmetric_cipher"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:backgroundTint="@color/violet" />

        <ScrollView
            android:layout_width="334dp"
            android:layout_height="525dp"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/symmetric_cipher_text" />
        </ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>