<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity"
    android:background="@color/dark_salmon">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="354dp"
        android:layout_height="173dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/agencyfb_font"
        android:text="
 Are you too, Brutus\n\n
    Зашифруй сообшение по заветам Цезаря."
        android:textColor="@color/violet"
        android:textSize="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="259dp"
        android:layout_height="75dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/blackberry_normal"
        android:gravity="center"
        android:text="@string/meow_task"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:backgroundTint="@color/violet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/blackberry_normal"
        android:text="Сделано!"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="306dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/agencyfb_font"
        android:text="У тебя  есть открытый текст:"
        android:textColor="@color/violet"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="488dp"
        android:fontFamily="@font/blackberry_normal"
        android:background="@drawable/rounded_background_button"
        android:backgroundTint="@color/white"
        android:hint="@string/input"
        android:textColorHint="@color/pale_purple"
        android:textSize="42sp"
        android:textColor="@color/violet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>