<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Module3Fragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="377dp"
        android:layout_height="588dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:orientation="vertical"
        android:translationY="30dp">

        <Button
            android:id="@+id/button_lectures1"
            android:layout_width="310dp"
            android:layout_height="74dp"
            android:backgroundTint="@color/peach"
            android:textColor="@color/violet"
            android:fontFamily="@font/alumnisans_regular"
            android:gravity="center_vertical|start"
            android:text="Введение в системы с открытым и закрытым ключом"
            android:textSize="24sp"
            android:onClick="educationActivity"/>

        <Button
            android:id="@+id/button_lectures2"
            android:layout_width="310dp"
            android:layout_height="74dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alumnisans_regular"
            android:gravity="center_vertical|start"
            android:onClick="educationActivity"
            android:text="Принцип работы RSA"
            android:textSize="24sp"
            android:backgroundTint="@color/peach"
            android:textColor="@color/violet"/>

        <Button
            android:id="@+id/button_lectures3"
            android:layout_width="310dp"
            android:layout_height="74dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alumnisans_regular"
            android:gravity="center_vertical|start"
            android:onClick="educationActivity"
            android:text="Принцип работы ECC"
            android:textSize="24sp"
            android:backgroundTint="@color/peach"
            android:textColor="@color/violet"/>

        <Button
            android:id="@+id/button_lectures4"
            android:layout_width="310dp"
            android:layout_height="74dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/peach"
            android:textColor="@color/violet"
            android:fontFamily="@font/alumnisans_regular"
            android:gravity="center_vertical|start"
            android:onClick="educationActivity"
            android:text="Система шифрования Эль-Гамаля"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView

        android:id="@+id/textView2"
        android:layout_width="259dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_background_text"
        android:fontFamily="@font/blackberry_normal"
        android:gravity="center_vertical|start"
        android:paddingStart="10dp"
        android:text="@string/modul3"
        android:textAlignment="inherit"
        android:textColor="@color/violet"
        android:textSize="42sp"
        android:translationY="10dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="193dp"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_background_text"
        android:backgroundTint="@color/violet"
        android:fontFamily="@font/alumnisans_regular"
        android:paddingStart="10dp"
        android:text="@string/asymmetric_cipher_cap"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:translationX="70dp"
        android:translationY="65dp"
        tools:ignore="RtlSymmetry" />

</FrameLayout>